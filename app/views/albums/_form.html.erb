<%= form_with model: album do |form| %>
  <% if album.errors.any? %>
    <div>
      <% album.errors.each do |error| %>
      <div class="alert alert-danger d-flex align-items-center mt-1" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
          <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </svg>
        <div>
          <%= error.full_message %>
        </div>
        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
      </div> 
      <% end %>
    </div>
  <% end %>

  <div class="mt-2">
    <%= form.text_field :title, placeholder: "Enter Title", class: "form-control"%>
  </div>
  
  <div class="mt-3">
    <%= form.text_area :description, placeholder: "Enter Description", class: "form-control" %>
  </div>
  
  <div class="mt-2">
    <%= form.text_field :tagged, class:"form-control", placeholder: "Enter Tags" %>
  </div>
  
  <div class="mt-2">
    <%= form.label :"Select Cover Image"%>
    <%= form.file_field :cover, class: "form-control"%>
  </div>
  
  <div class="mt-3">
    <%= form.label :"Select Images"%>
    <%= form.file_field :images ,multiple:true, class: "form-control" %>
  </div>
  
  <div class="text-center mt-2">
    <%= form.label :"published :"%>
    <%= form.check_box :published, class: "form-check-input" %>
  </div>
  
  <div class="text-center mt-3">
    <%= form.submit :"Create Album", class: "btn btn-outline-secondary" %>
  </div>
<% end %>