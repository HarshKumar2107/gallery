<% if user_signed_in?%>
  <div class="row bg-secondary text-light">
    <div class="col-lg-12">
      <h3 style="display: inline;" >User: <%= current_user.f_name%> <%= current_user.l_name%></h3>
      <div style="display: inline-block; float: right; margin: 7px;" >
        <%= button_to "Delete My Account", registration_path(resource_name), class: "btn btn-secondary bg-dark", data: { confirm: "Are you sure?" }, method: :delete %>
      </div>
    </div>
  </div>
<%end%>

<div class="row justify-content-center">
  <div class="col-lg-5">
    <h2 class="text-center mt-3">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: { turbo: :false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mt-3">
        <%= f.label :new_password %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "6 Characters Minimum", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
         
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="field mt-3">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, class: "form-control", placeholder: "Enter your current password", autocomplete: "current-password" %>
      </div>

      <div class="actions text-center mt-2">
        <%= f.submit "Update", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>