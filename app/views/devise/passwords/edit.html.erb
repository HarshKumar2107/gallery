<div class="row justify-content-center">
  <div class="col-lg-5 mt-4">
    <h2 class="text-center mb-4">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password,class: "form-control", autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password", class: "mt-3" %><br />
        <%= f.password_field :password_confirmation,class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="actions text-center mt-4">
        <%= f.submit "Change my password", class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    <div class="text-center mt-3">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>